<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayoutPanel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:background="@drawable/background_black">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="@dimen/parameter_title_alpha"
        android:text="@string/hint_value"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        android:theme="@style/subheading_text_style"
        app:fontFamily="@font/arialn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:alpha="@dimen/parameter_unit_alpha"
        android:text="@string/hint_cmH2o"
        android:textColor="@color/white"
        android:textSize="@dimen/_5sdp"
        android:theme="@style/subheading_text_style"
        app:fontFamily="@font/arialn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewActualValue" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutPanelValue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValue">


        <androidx.appcompat.widget.LinearLayoutCompat

            android:id="@+id/linearLayoutUpperValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewUpperLimitValue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:alpha="0.6"
                android:text="@string/hint_upper_value"
                android:textColor="#D3D3D3"
                android:theme="@style/subheading_text_style" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDownLimitValue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:text="@string/hint_down_value"
                android:textColor="#D3D3D3"
                android:theme="@style/subheading_text_style" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutDownValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_2sdp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewUpperLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_up_arrow" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_15sdp"
                android:background="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewDownLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewActualValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/hint_value_unit"
        android:textColor="@color/white"
        android:textSize="@dimen/_22sdp"
        android:theme="@style/subheading_text_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layoutPanelValue"
        app:layout_constraintTop_toBottomOf="@+id/textViewValue" />
</androidx.constraintlayout.widget.ConstraintLayout>
