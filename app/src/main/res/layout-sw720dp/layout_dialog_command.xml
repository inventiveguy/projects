<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="40dp"
    app:cardBackgroundColor="@color/light_black"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_top_curved_edge">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="7dp"
                android:text="Developer command"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="normal" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Main Layout-->
            <LinearLayout
                android:id="@+id/layoutMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etCmd"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/style_bordered_btn_white"
                        android:hint="Enter the ventilator command"
                        android:lineSpacingExtra="4dp"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textColorHint="#C7C6C6"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/btnSend"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@color/white"
                        app:srcCompat="@android:drawable/ic_menu_send" />

                </LinearLayout>

                <GridLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnSuspendAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/style_bordered_btn_white"
                        android:text="K-A"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnFastBoot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/style_bordered_btn_white"
                        android:text="F-B"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnSelfTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/style_bordered_btn_white"
                        android:text="STP"
                        android:textColor="@android:color/white" />

                </GridLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>