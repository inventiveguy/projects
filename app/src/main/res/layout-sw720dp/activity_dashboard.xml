                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:alpha="0.5"
                            android:text="Weight"
                            android:textColor="@color/dim_grey" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

