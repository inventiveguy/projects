                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_maneuvers"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_weight="1"
