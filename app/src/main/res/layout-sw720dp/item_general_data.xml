<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayoutPanel"
    android:layout_width="@dimen/_40sdp"
    android:layout_height="@dimen/_40sdp"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/background_black">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="@dimen/parameter_unit_alpha"
        android:gravity="center"
        android:text="@string/hint_value"
        android:textColor="@color/white"
        android:textSize="@dimen/_4sdp"
        android:theme="@style/subheading_text_style"
        app:fontFamily="@font/arialn"
        app:layout_constraintBottom_toTopOf="@id/textViewValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_value_unit"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:theme="@style/subheading_text_style"
        app:fontFamily="@font/avenir_next_lt_pro_medium"
        app:layout_constraintBottom_toTopOf="@+id/textViewUnit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:alpha="@dimen/parameter_unit_alpha"
        android:text="@string/hint_cmH2o"
        android:textColor="@color/white"
        android:textSize="@dimen/_3sdp"
        android:theme="@style/subheading_text_style"
        app:fontFamily="@font/arialn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValue" />
</androidx.constraintlayout.widget.ConstraintLayout>