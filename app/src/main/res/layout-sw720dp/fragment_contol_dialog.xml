<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewCross"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:src="@drawable/ic_cross_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@+id/control_nav_container"
        app:layout_constraintEnd_toEndOf="@+id/control_nav_container"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/includeButtonBasic"
            layout="@layout/content_button_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp" />

        <include
            android:id="@+id/includeButtonApnea"
            layout="@layout/content_button_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"/>
        <include
            android:id="@+id/includeButtonAdvance"
            layout="@layout/content_button_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"/>

        <include
            android:id="@+id/includeButtonPatient"
            layout="@layout/content_button_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/subheading_text_style"
        android:text="@string/hint_controls"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="@dimen/_8sdp"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/control_nav_container"
        android:layout_width="0dp"
        android:background="@color/dolphin_grey"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPanel" />



</androidx.constraintlayout.widget.ConstraintLayout>