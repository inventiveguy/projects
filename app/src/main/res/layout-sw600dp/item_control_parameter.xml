<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayoutPanel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4.5dp"
    android:background="@drawable/background_black"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="@dimen/parameter_title_alpha"
        android:text="@string/hint_value"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:theme="@style/subheading_text_style"
        app:layout_constraintBottom_toTopOf="@id/textViewReading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewReading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_value_unit"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:theme="@style/subheading_text_style"
        app:layout_constraintBottom_toTopOf="@id/textViewUnit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValue" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:alpha="@dimen/parameter_unit_alpha"
        android:text="@string/hint_cmH2o"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:theme="@style/subheading_text_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewReading" />


</androidx.constraintlayout.widget.ConstraintLayout>