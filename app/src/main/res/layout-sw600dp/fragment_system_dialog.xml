<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewCross"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_14sdp"
        android:src="@drawable/ic_cross_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@+id/system_nav_container"
        app:layout_constraintStart_toStartOf="@+id/system_nav_container"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/includeButtonInfo"
            layout="@layout/content_button_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp" />

        <include
            android:id="@+id/includeButtonTestCalib"
            layout="@layout/content_button_layout"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp" />

        <include
            android:id="@+id/includeButtonSensors"
            layout="@layout/content_button_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp" />


        <include
            android:id="@+id/includeButtonSettings"
            layout="@layout/content_button_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/system_nav_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/background_grey_border_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPanel" />


</androidx.constraintlayout.widget.ConstraintLayout>