<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.agvahealthcare.ventilator_ext.utility.number_picker.NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:np_dividerColor="@android:color/transparent"
        app:np_height="150dp"
        app:np_max="59"
        app:np_min="0"
        app:np_selectedTextColor="@color/black"
        app:np_selectedTextSize="@dimen/_7sdp"
        app:np_textColor="@color/black"
        app:np_textSize="@dimen/_6sdp"
        app:np_value="3"
        app:np_width="64dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonOk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/blue_200"
        android:gravity="center"
        android:text="@string/hint_ok"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:theme="@style/subheading_text_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>