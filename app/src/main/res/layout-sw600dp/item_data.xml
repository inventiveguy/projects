<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayoutPanel"
    android:layout_width="@dimen/_45sdp"
    android:layout_height="@dimen/top_bar_height"
    android:layout_margin="0dp"
    android:background="@drawable/background_black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:alpha="1"
            android:gravity="center"
            android:text="@string/hint_value"
            android:textAllCaps="true"
            android:textColor="#D3D3D3"
            android:textSize="@dimen/_4sdp"
            android:theme="@style/subheading_text_style"
            app:fontFamily="@font/arialn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hint_value_unit"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:theme="@style/subheading_text_style"
            app:fontFamily="@font/avenir_next_lt_pro_medium" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>