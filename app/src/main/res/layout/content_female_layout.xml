<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPanelFemale"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonFemale"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:theme="@style/button_normal_style"
        android:background="@color/light_grey"
        android:text="@string/hint_female"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="@dimen/_6sdp"
        android:paddingStart="@dimen/_25sdp"
        android:paddingEnd="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewFemale"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewFemale"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/ic_female_unselect"
        app:layout_constraintStart_toEndOf="@+id/buttonFemale"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>